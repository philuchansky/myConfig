<% # @page_title = "Edit #{@post.title}" %>
<h1 class="pull-left">Edit: <%= @post.title %></h1>
<div class="pull-right" id="edit-btns-top">
    <button type="submit" class="btn btn-primary">Save</button> <a href="/" class="btn btn-default">Cancel</a>
</div>
<hr>
<form class="form-horizontal" action="/<%= @post.id %>/edit" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="form-group">
        <label for="inputTitle" class="col-sm-2 control-label">Title<span class="text-danger">*</span></label>
        <div class="col-sm-10">
            <input id="inputTitle" class="form-control" type="text" name="post[title]" placeholder="Title" value="<%= @post.title %>">
        </div>
    </div>

    <div class="form-group">
        <label for="textDescription" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <textarea id="textDescription" class="form-control" name="post[description]" rows="5"><%= @post.description %></textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="textSampleCode" class="col-sm-2 control-label">Sample Code</label>
        <div class="col-sm-10">
            <textarea id="textSampleCode" class="form-control" name="post[samplecode]" rows="8"><%= @post.samplecode %></textarea>
        </div>
    </div>
	
    <div class="form-group">
        <label for="inputHomepage" class="col-sm-2 control-label">Homepage</label>
        <div class="col-sm-10">
            <input id="inputHomepage" class="form-control" type="text" name="post[homepage]" placeholder="Homepage" value="<%= @post.homepage %>">
        </div>
    </div>

    <hr>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="pull-right">
                <button type="submit" class="btn btn-primary">Save</button> <a href="/" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
</form>

<script>
    $(function(){
        var simplemde = new SimpleMDE( {element: document.getElementById("textSampleCode")} );
        simplemde.render();
    });
</script>