<% @page_title = "Add New Item" %>
<form class="form-horizontal" action="/new" method="post">
    <div class="form-group">
        <label for="inputTitle" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input id="inputTitle" class="form-control" type="text" name="title">
        </div>
    </div>
    <div class="form-group">
        <label for="textDesc" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <textarea id="textDesc" class="form-control" name="description" rows="8"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputHomepage" class="col-sm-2 control-label">Item Homepage</label>
        <div class="col-sm-10">
            <input id="inputHomepage" class="form-control" type="text" name="homepage">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add Item</button> <a href="/" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>