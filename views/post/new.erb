<% @page_title = "Add New Item" %>
<form class="form-horizontal" action="/new" method="post">
    <div class="form-group">
        <label for="inputTitle" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-8">
            <input id="inputTitle" class="form-control" type="text" name="post[title]">
        </div>
    </div>
    <div class="form-group">
        <label for="selectCategory" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-8">
            <select id="selectCategory" class="form-control" name="post[category]">
                <option value="ruby">Ruby</option>
                <option value="javascript">Javascript</option>
                <option value="html">HTML</option>
                <option value="css">CSS</option>
                <option value="postgres">Postgres</option>
                <option value="mysql">SQL</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="textDesc" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-8">
            <textarea id="textDesc" class="form-control" name="post[description]" rows="8"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="textSampleCode" class="col-sm-2 control-label">Sample Code</label>
        <div class="col-sm-8">
            <textarea id="textSampleCode" class="form-control" name="post[samplecode]" rows="8"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputHomepage" class="col-sm-2 control-label">Item Homepage</label>
        <div class="col-sm-8">
            <input id="inputHomepage" class="form-control" type="text" name="post[homepage]">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add Item</button> <a href="/" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

